<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:autoFocusButtonColor="@android:color/white"
            app:autoFocusButtonVisible="true"
            app:flashButtonColor="@android:color/white"
            app:flashButtonVisible="true"
            app:frameColor="@android:color/white"
            app:frameCornersSize="50dp"
            app:frameCornersRadius="5dp"
            app:frameAspectRatioWidth="1"
            app:frameAspectRatioHeight="1"
            app:frameSize=".85"
            app:frameThickness="2dp"
            app:maskColor="#77000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:background="@drawable/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/btw_item"
                    android:text="Product Name"
                    android:fontFamily="@font/ubuntu"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/name"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product name"
                    android:layout_marginTop="@dimen/btw_item"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu"
                    android:layout_marginTop="@dimen/btw_item"
                    android:text="Product Code"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_height="wrap_content"
                    android:text="Product Code"
                    android:layout_marginTop="@dimen/btw_item"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reward Value"
                    android:fontFamily="@font/ubuntu"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/btw_item"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/reward"
                    android:fontFamily="@font/ubuntu_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reward Value"
                    android:layout_marginTop="@dimen/btw_item"
                    android:textAlignment="center"
                    android:textSize="18sp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/claim"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
                    android:backgroundTint="#FFEE58"
                    android:textColor="@color/secondaryTextColor"
                    android:fontFamily="@font/ubuntu"
                    android:text="Claim"
                    app:icon="@drawable/ic_baseline_card_giftcard_24"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/btw_item"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>